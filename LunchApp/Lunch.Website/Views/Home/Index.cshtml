@using System.Collections
@using System.Text
@{
    ViewBag.Title = "Index";
}

<div id="content">
    <div class="bgOne"></div>
    <div class="mask"></div>
    <div id="info">

        <div class="primary">
            
            <div class="usersWrap">
                <img src="~/content/images/user001.png" />
                <img src="~/content/images/user002.png" />
                <img src="~/content/images/user003.png" />
                <p>3 picks</p>
            </div>
            
            <p class="titleLabel">where would you like to eat?</p>

            <div class="listingWrap">
                <div class="listing"><p>puglionis</p></div>
                <div class="listing"><p>chic-fil-a</p></div>
                <div class="listing"><p>buffalo wild wings</p></div>
                <div class="listing"><p>cracker barrel</p></div>
            </div>

        </div>

    </div>
</div>

<div id="secondaryContent">
    <div id="veto" class=""><div class="vetoIcon"></div><div class="secondaryText">3</div></div>
    <div id="overrides" class="empty"><div class="overridesIcon"></div><div class="secondaryText">2</div></div>
    <div id="badges" class="new"><div class="badgesIcon"></div><div class="secondaryText">3</div></div>
</div>

<script>
    $(document).ready(function () {
        if ($.browser.msie) {
            function interval() {
                $('.new').children().not('.secondaryText').delay(1500).animate({ marginTop: "100px" }, 1000, function () {
                    $(this).delay(500).animate({ marginTop: "20px" }, 1000);
                });
            }

            setInterval(function () {
                interval()
            }, 1500);
        }
    });
</script>

