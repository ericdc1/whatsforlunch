@model Lunch.Website.ViewModels.Homepage

@{
    ViewBag.Title = "Going";
    var todayschoice = Model.RestaurantsForToday.OrderByDescending(f => f.Votes).Take(1).First();
}

<div id="content">
    <div class="bgOne"></div>
    <div class="mask"></div>
    <div id="info">

        <div class="primary">

            <div class="usersWrap going">
                <p>@Model.PeopleWhoVotedToday.Count people are going</p>
                @foreach (var voter in Model.PeopleWhoVotedToday)
                {
                    <img title="@voter.FullNameWithEmail" src="http://www.gravatar.com/avatar/@Html.Md5Hash(voter.Email)?s=200" />
                }
            </div>

            <p class="voted">You are eating at<br /><span class="restLabel">@todayschoice.Restaurant.RestaurantName</span></p>

        </div>
    </div>
</div>


