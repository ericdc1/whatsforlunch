@model Lunch.Website.ViewModels.Homepage

@using System.Collections
@using System.Text
@{
    ViewBag.Title = "Index";
}

@if (Model.YourVote != null)
{
    <p>You already voted for @Model.YourVote.Restaurant.RestaurantName!</p>
}

<div id="content">
    <div class="bgOne"></div>
    <div class="mask"></div>
    <div id="info">

        <div class="primary">
            
            <div class="usersWrap">
                <img src="~/content/images/user001.png" />
                <img src="~/content/images/user002.png" />
                <img src="~/content/images/user003.png" />
                <p>3 picks</p>
            </div>
            
            <p class="titleLabel">where would you like to eat?</p>

            <div class="listingWrap">
                
                @foreach (var restaurant in Model.RestaurantsForToday)
                {
                    <a href="/Home/SaveVote/@restaurant.Restaurant.Id"><div class="listing"><p>@restaurant.Restaurant.RestaurantName</p></div></a>
                }
            </div>

        </div>

    </div>
</div>

<div id="secondaryContent">
    <div id="veto" class=""><div class="vetoIcon"></div><div class="secondaryText">3</div></div>
    <div id="overrides" class="empty"><div class="overridesIcon"></div><div class="secondaryText">2</div></div>
    <div id="badges" class="new"><div class="badgesIcon"></div><div class="secondaryText">3</div></div>
    <a href="@Url.Action("Manage", "Account")" id="myAccount"><i class="icon-cog"></i></a>
    @if(Roles.IsUserInRole("Administrator"))
    {
        <a href="@Url.Action("Index", "Users")" id="users">
            <i class="icon-user"></i>
        </a>
    }
</div>

<script>
    $(document).ready(function () {
        if ($.browser.msie) {
            function interval() {
                $('.new').children().not('.secondaryText').delay(1500).animate({ marginTop: "100px" }, 1000, function () {
                    $(this).delay(500).animate({ marginTop: "20px" }, 1000);
                });
            }

            setInterval(function () {
                interval();
            }, 1500);
        }
    });
</script>

