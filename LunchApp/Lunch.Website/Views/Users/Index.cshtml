@model IEnumerable<Lunch.Website.ViewModels.User>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<div class="btn-toolbar">
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary"})
</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.SendMail1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendMail2)
        </th>
          <th>
            @Html.DisplayNameFor(model => model.SendMail3)
        </th>
            <th>
            @Html.DisplayNameFor(model => model.SendMail4)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.SendMail1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendMail2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendMail3)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.SendMail4)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { ID = item.Id })"><i class="icon-pencil"></i></a>
                <a href="@Url.Action("Delete", new { ID = item.Id })" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
            </td>
        </tr>
    }

</table>
