@model IEnumerable<Lunch.Website.ViewModels.User>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<div class="btn-toolbar">
    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary"})
</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdministrator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendMorningEmailFlg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendVotingIsOverEmailFlg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendWhereWeAreGoingEmailFlg)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdministrator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendMorningEmailFlg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendVotingIsOverEmailFlg)
            </td>
                 <td>
                @Html.DisplayFor(modelItem => item.SendWhereWeAreGoingEmailFlg)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { ID = item.Id })"><i class="icon-pencil"></i></a>
                <a href="@Url.Action("Delete", new { ID = item.Id })" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
            </td>
        </tr>
    }

</table>
