@model Lunch.Website.ViewModels.UserManage

@{
    ViewBag.Title = "Manage Account";
}

<div id="content" class="reports">
    <div class="bgOne"></div>
    <div class="mask"></div>
    <div id="info">
        <div class="management">

            <h1>Manage Account</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
    
                <div id="manageFormWrap">

                    <div class="editorField">
                        @Html.EditorFor(model => model.Id)
                        @Html.ValidationMessageFor(model => model.Id)
                    </div>

                    <div class="formRowWrap">
                        <div class="editorLabel">
                            @Html.LabelFor(model => model.FullName)
                        </div>
                        <div class="editorField">
                            @Html.EditorFor(model => model.FullName)
                            @Html.ValidationMessageFor(model => model.FullName)
                        </div>
                    </div>

                    <div class="formRowWrap">
                        @Html.ActionLink("Change Password", "ChangePassword", null, new {@class = "btn submit"})
                        @Html.ActionLink("Regenerate GUID", "RegenerateGuid", null, new {id = "regenerateGuid", @class = "btn submit"})
                    </div>
                    
                    <div class="row borderTop">

                        <div class="column manageUser">
                            <div class="mailLabel">
                                <i class="icon-envelope-alt"></i>
                            </div>

                            <div class="checkBox">
                                Vote:
                                @Html.EditorFor(model => model.SendMail1)
                                @Html.ValidationMessageFor(model => model.SendMail1)
                            </div>

                            <div class="checkBox">
                                Veto:
                                @Html.EditorFor(model => model.SendMail2)
                                @Html.ValidationMessageFor(model => model.SendMail2)
                            </div>

                            <div class="checkBox">
                                Result:
                                @Html.EditorFor(model => model.SendMail3)
                                @Html.ValidationMessageFor(model => model.SendMail3)
                            </div>

                            <div class="checkBox">
                                Rate:
                                @Html.EditorFor(model => model.SendMail4)
                                @Html.ValidationMessageFor(model => model.SendMail4)
                            </div>
                        </div>
                    </div>

                </div>
                
                <input type="submit" value="Save" class="btn submit" />
            }
            
        </div>
    </div>
</div>

<script type="text/javascript">

    $('#regenerateGuid').click(function(event) {
        event.preventDefault();

        $.ajax({
            url: $(this).attr('href'),
            type: 'POST',
            success: function(response) {
                if(response == 'success') {
                    alert('Guid Regenerated');
                }
            }
        });
    });
    
</script>