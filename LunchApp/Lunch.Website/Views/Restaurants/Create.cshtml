@model Lunch.Core.Models.Restaurant

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Restaurant</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.RestaurantName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RestaurantName)
            @Html.ValidationMessageFor(model => model.RestaurantName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RestaurantType.Id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RestaurantType.Id, (SelectList)ViewBag.RestaurantTypes, "-- SELECT --")
            @Html.ValidationMessageFor(model => model.RestaurantType.Id)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

